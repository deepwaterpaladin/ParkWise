@page
@model IndexModel
@{
    ViewData["Title"] = "Home";
}

 <section class="hero">
    <h1>ParkWise</h1>
    <p>The Ultimate Parking Lot Management Solution</p>
    <button>Get Started</button>
  </section>

  <!-- Features Section -->
  <section id="features">
    <h2>Features</h2>
    <ul>
      <li>Real-time Parking Lot Status</li>
      <li>Customizable Parking Rules and Regulations</li>
      <li>Automated Payment and Ticketing System</li>
      <li>Integrations with Popular Payment Gateways</li>
      <li>Advanced Reporting and Analytics</li>
      <li>Easy-to-Use Dashboard and Mobile App</li>
    </ul>
  </section>

  <!-- Pricing Section -->
  <section id="pricing">
    <h2>Pricing</h2>
    <div class="pricing-plans">
      <div class="plan">
        <h3>Basic</h3>
        <p>Perfect for small parking lots with up to 50 spaces.</p>
        <p class="price">$29/month</p>
        <button>Get Started</button>
      </div>
      <div class="plan">
        <h3>Pro</h3>
        <p>Great for medium-sized parking lots with up to 200 spaces.</p>
        <p class="price">$79/month</p>
        <button>Get Started</button>
      </div>
      <div class="plan">
        <h3>Premium</h3>
        <p>Designed for large parking lots with over 200 spaces.</p>
        <p class="price">$199/month</p>
        <button>Get Started</button>
      </div>
    </div>
  </section>

  <!-- Contact Section -->
  <section id="contact">
    <h2>Contact Us</h2>
    <form>
      <input type="text" placeholder="Name" required>
      <input type="email" placeholder="Email" required>
      <textarea placeholder="Message"></textarea>
      <button type="submit">Send Message</button>
    </form>
  </section>


<div>
    <p>this page will have a summary of the lots under management, avaliable spots, etc.</p>
</div>